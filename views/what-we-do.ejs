Main hero END -->

<!-- =======================
Feature START -->
<section class="pt-0">
	<div class="container">
		<div class="row g-4 g-lg-5">
			<!-- Service item -->
			<div class="col-md-6">
				<div class="card card-body card-hover-shadow border d-flex flex-row p-4 h-100">
					<!-- Icon -->
					<figure class="text-primary mb-0">
						<i class="fa-solid fa-hand icons"></i>
					</figure>

					<!-- Title -->
					<div class="d-flex flex-column ms-4">
						<h5 class="mb-3">GBV Prevention and Response</h5>
						<p class="mb-3">
							HuSA implements strategies to reduce incidents of Gender-Based Violence (GBV) and
							improve access to support services through advocacy, training workshops, empowerment
							initiatives, and referral networks.
						</p>
					</div>
				</div>
			</div>

			<!-- Service item -->
			<div class="col-md-6">
				<div class="card card-body card-hover-shadow border d-flex flex-row p-4 h-100">
					<!-- Icon -->
					<figure class="text-primary mb-0">
						<i class="fa-solid fa-user-graduate icons"></i>
					</figure>

					<!-- Title -->
					<div class="d-flex flex-column ms-4">
						<h5 class="mb-3">Structured Educational Programs</h5>
						<p class="mb-3">
							We develop and implement educational initiatives within refugee communities to enhance
							mental health, including trauma healing training, social and emotional learning (SEL),
							language classes, and remedial education programs.
						</p>
					</div>
				</div>
			</div>

			<!-- Service item -->
			<div class="col-md-6">
				<div class="card card-body card-hover-shadow border d-flex flex-row p-4 h-100">
					<!-- Icon -->
					<figure class="text-primary mb-0">
						<i class="fa-solid fa-tree icons"></i>
					</figure>

					<!-- Title -->
					<div class="d-flex flex-column ms-4">
						<h5 class="mb-3">Environmental Protection Measures</h5>
						<p class="mb-3">
							Collaborating with local authorities and stakeholders, we work to create safe living
							environments through advocacy, transitional clean energy solutions, tree planting
							initiatives, and environmental awareness campaigns.
						</p>
					</div>

				</div>
			</div>

			<!-- Service item -->
			<div class="col-md-6">
				<div class="card card-body card-hover-shadow border d-flex flex-row p-4 h-100">
					<!-- Icon -->
					<figure class="text-primary mb-0">
						<i class="fa-solid fa-hands-holding-child icons"></i>
					</figure>

					<!-- Title -->
					<div class="d-flex flex-column ms-4">
						<h5 class="mb-3">Child Protection</h5>
						<p class="mb-3">
							Strengthening measures for safeguarding children within refugee communities is a priority,
							achieved through training community volunteers, supporting child-led activities,
							conducting advocacy, and establishing child play centers.
						</p>
					</div>
				</div>
			</div>

			<!-- Service item -->
			<div class="col-md-6">
				<div class="card card-body card-hover-shadow border d-flex flex-row p-4 h-100">
					<!-- Icon -->
					<figure class="text-primary mb-0">
						<i class="fa-solid fa-users-between-lines icons"></i>
					</figure>

					<!-- Title -->
					<div class="d-flex flex-column ms-4">
						<h5 class="mb-3">Community Resilience and Social Cohesion:</h5>
						<p class="mb-3">
							Community Resilience and Social Cohesion: We enhance community well-being by
							organizing support visits, sports tournaments, cultural orientation initiatives,
							empowerment projects, vocational skills training, health promotion initiatives, and talent
							promotion programs.
						</p>
					</div>
				</div>
			</div>

			<!-- Service item -->
			<div class="col-md-6">
				<div class="card card-body card-hover-shadow border d-flex flex-row p-4 h-100">
					<!-- Icon -->
					<figure class="text-primary mb-0">
						<i class="fa-solid fa-bowl-food icons"></i>
					</figure>

					<!-- Title -->
					<div class="d-flex flex-column ms-4">
						<h5 class="mb-3">Food Security Interventions:</h5>
						<p class="mb-3">
							HuSA implements sustainable agricultural innovations to enhance food security and mental
							well-being, including training on sustainable agriculture practices, establishing community
							gardens, conducting nutrition education, and implementing income-generating projects.
						</p>
					</div>

				</div>
			</div>
		</div>
	</div>	
</section>
